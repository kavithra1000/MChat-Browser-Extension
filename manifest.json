{
  "manifest_version": 3,
  "name": "ChatGPT Message Navigator",
  "version": "1.0",
  "permissions": ["scripting", "activeTab"],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "ChatGPT Navigator",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  }
}
